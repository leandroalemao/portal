<%= simple_form_for @ticket, :html => { :class => 'form-horizontal' } do |f| %>

<fieldset>
    <legend><%= t('helpers.links.new') %> Ticket</legend>


  <%= f.input :nome %>
  <%= f.input :responsavel %>
  <%= f.input :descricao %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t("helpers.links.cancel"), tickets_path, :class => 'btn' %>
  </div>

  </fieldset>
<% end %>
