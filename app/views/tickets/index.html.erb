<%- model_class = Ticket -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table id="tickets" class="table table-striped" data-source="<%= tickets_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= t('inicial.campos.id') %></th>
      <th><%= t('inicial.campos.nome')  %></th>
      <th><%= t('inicial.campos.responsavel')  %></th>
      <th><%= t('inicial.campos.descricao') %></th>
      <th><%= t('inicial.campos.created_at') %></th>
      <th><%= t('inicial.campos.updated_at') %></th>
      <th><%= t('inicial.campos.created_by') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.id, ticket_path(ticket) %></td>
        <td><%= ticket.nome %></td>
        <td><%= ticket.responsavel %></td>
        <td><%= ticket.descricao %></td>
        <td><%=l ticket.created_at %></td>
        <td><%=l ticket.updated_at %></td>
        <td><%= ticket.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ticket_path,
            :class => 'btn btn-primary' %>
