<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, :label => t('inicial.campos.username'), :required => true, :autofocus => true %>
    <%= f.input :email, :label => t('inicial.campos.email'), :required => true %>
    <%= f.input :name, :label => t('inicial.campos.name'), :required => true %>
    <%= f.input :branch, :label => t('inicial.campos.branch'), :required => true %>
    <%= f.input :phone, :label => t('inicial.campos.phone'), :required => true %>
    <%= f.input :password, :label => t('inicial.campos.password'), :required => true %>
    <%= f.input :password_confirmation, :label => t('inicial.campos.password_confirmation'), :required => true %>
    <%= f.label :role, t('inicial.campos.role') %>
    <%= f.select :role, options_for_select([["Selecione", ""], ["Administrador", "admin"], ["Gerente", "moderator"], ["Analista", "common"]]), :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar", :class => 'btn btn-primary' %>
  </div>
<% end %>

