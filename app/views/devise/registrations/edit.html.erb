<fieldset>
    <legend>Editar <%= t('inicial.campos.username') %></legend>
  </BR>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-inline' }, :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :username, :label => t('inicial.campos.username'), :required => true, :autofocus => true %>
    <%= f.input :email, :label => t('inicial.campos.email'), :required => true %>
    <%= f.input :name, :label => t('inicial.campos.nome'), :required => true %>
    <!-- <%= f.input :username_name, data: {autocomplete_source: User.order(:name).map(&:name)} %> -->
    <%= f.input :branch, :label => t('inicial.campos.branch'), :required => true %>
    <%= f.input :phone, :label => t('inicial.campos.phone'), :required => true %>
    <%= f.input :password, :label => t('inicial.campos.password'), :autocomplete => "off", :hint => "Deixe em branco caso não queira alterar a senha", :required => false %>
    <%= f.input :password_confirmation, :label => t('inicial.campos.password_confirmation'), :required => false %>
    <%= f.input :current_password, :label => t('inicial.campos.current_password'), :hint => "Digite a sua senha atual para confirmar as alterações", :required => true %>
  

  <div class="field">
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> <%= t("helpers.links.update") %>
    <% end %>
    <%= link_to(:root, class: 'btn btn-danger') do %>
        <%= content_tag('i', nil, class: 'icon-remove') %> <%= t("helpers.links.back") %>
    <% end %>    
  </div>
<% end %>

</fieldset>
